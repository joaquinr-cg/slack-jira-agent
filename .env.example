# ============================================
# SLACK CONFIGURATION
# ============================================
# Bot token (starts with xoxb-)
SLACK_BOT_TOKEN=xoxb-your-bot-token

# App-level token for Socket Mode (starts with xapp-)
SLACK_APP_TOKEN=xapp-your-app-token

# Signing secret (optional, for webhook verification)
SLACK_SIGNING_SECRET=your-signing-secret

# Admin user IDs (comma-separated, optional)
# If empty, all users can use admin commands
ADMIN_USER_IDS=U12345678,U87654321

# Channel ID for approval messages (optional)
# If empty, approvals go to the same channel as the trigger
APPROVAL_CHANNEL_ID=

# ============================================
# LANGBUILDER CONFIGURATION
# The LangBuilder flow handles ALL operations:
# - Enrichment (JIRA read, Google Drive transcripts)
# - Analysis (comparing input with JIRA state)
# - Proposal generation
# - JIRA write execution (after approval)
# ============================================
LANGBUILDER_FLOW_URL=https://langbuilder.example.com
LANGBUILDER_FLOW_ID=your-flow-id
LANGBUILDER_API_KEY=your-langbuilder-api-key

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_PATH=./data/jira_agent.db

# ============================================
# AWS / DYNAMODB CONFIGURATION
# If running on EC2 with IAM role, no keys needed
# ============================================
AWS_REGION=us-east-1
DYNAMODB_TABLE_NAME=pm_configurations
# AWS_ACCESS_KEY_ID=...        # Optional if using IAM Role
# AWS_SECRET_ACCESS_KEY=...    # Optional if using IAM Role

# ============================================
# GOOGLE DRIVE (shared service account)
# Shared across all PMs. PMs can override
# folder_id and client_email in DynamoDB.
# ============================================
GDRIVE_PROJECT_ID=your-gcp-project-id
GDRIVE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GDRIVE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END PRIVATE KEY-----\n"
GDRIVE_PRIVATE_KEY_ID=
GDRIVE_CLIENT_ID=
GDRIVE_FOLDER_ID=default-folder-id
GDRIVE_FOLDER_NAME=Meet recordings
GDRIVE_FILE_FILTER=

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Request timeout in seconds (default: 300 = 5 minutes)
REQUEST_TIMEOUT=300

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ============================================
# EMOJI CONFIGURATION (optional)
# Emoji names without colons
# ============================================
MARK_EMOJI=ticket
PENDING_EMOJI=eyes
APPROVED_EMOJI=white_check_mark
REJECTED_EMOJI=x
